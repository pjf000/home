<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
	http://code.alibabatech.com/schema/dubbo http://code.alibabatech.com/schema/dubbo/dubbo.xsd
	http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.2.xsd">

    <!-- 配置应用信息 -->
    <dubbo:application name="${dubbo.application.name}" owner="asset-manage-web"
                       organization="dSheng" logger="${dubbo.application.logger}"/>

    <!-- 配置注册中心 -->
    <dubbo:registry address="${zookeeper}"/>

    <!-- 配置暴露服务端口号 -->
    <dubbo:protocol port="${dubbo.protocol.port}"/>

    <dubbo:monitor protocol="registry" />

    <!-- 扫描注解包路径，多个包用逗号分隔，不填pacakge表示扫描当前ApplicationContext中所有的类 -->
    <dubbo:annotation package="" />

    <context:component-scan base-package="com.jeff.home.web" />

</beans>